<header>
<h1 class="main-title">Books</h1>
</header>

<table class="outside">

    <tr class="nav">
      <th class="title">Title</th>
      <th class="body">Body</th>
    </tr>

    
    <% @all.each do |all| %>
      <tr class="content">
        <td class="title"><%= all.title %></td>
        <td class="body" ><%= all.body %></td>
      
        <td class="links"><%= link_to 'show', list_path(all.id) %></td>
        <td class="links"><%= link_to 'edit', edit_list_path(all.id) %></td>
        <td class="links"><%= link_to 'destroy', destroy_list_path(all.id), method: :delete, "data-confirm" => "Really?" %></td>
      </tr>
    <% end %>
    
</table>

<div class="form">
  <h1>New book</h1>
  <% if @list.errors.any? %>
    <%= @list.errors.count %>errors prohibited this book from being saved
    <ul>
      <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @list, url: '/lists', method: :post do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>